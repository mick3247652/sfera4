<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="5dp"
                                   android:maxWidth="200dp"
                                   app:cardCornerRadius="5dp"
                                   app:cardElevation="5dp" android:layout_marginStart="30dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/answerUserPhoto"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:src="@drawable/profile_default_photo"
                    app:civ_border="true"
                    app:civ_border_color="@color/gray_bg"
                    app:civ_border_width="1dp"
                    app:civ_shadow="false"
                    app:civ_shadow_radius="0"/>

            <TextView
                    android:id="@+id/answerUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/market_ic_delete"
                    android:id="@+id/deleteAnswer" android:layout_weight="1" android:alpha="0.5"/>
        </LinearLayout>

        <TextView
                android:id="@+id/answerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:autoLink="web|map"
                android:fontFamily="@font/roboto_light"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/answer_text"
                android:textSize="18sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>